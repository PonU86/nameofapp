<p id="notice"><%= notice %></p>
<%= image_tag("Montana1.jpg", class: "img-fluid") %>

<h1>Products</h1>


<%= will_paginate @products %>

<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm">
        <%= link_to product do %>
          <h1><%= product.name %></h1>
        <% end %>
        <!-- <a href="#"><h1><%= product.name %></h1></a> -->
        <p><%= product.description %></p>
        <p><%= product.colour %></p>
        <p><%= number_to_currency product.price %></p>
        <% if product.image_url %>
          <%= image_tag( product.image_url, class: "img-fluid") %>
        <% end %>
        <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-info' %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </div> <!-- /col -->
    <% end %>
  </div> <!-- end row -->
</div> <!-- end container -->



